        xmlns:local="clr-namespace:_41_SimpleWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="myTB" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="780" Height="33"/>
        <Button x:Name="button1" Content="Say &quot;Hello&quot;" HorizontalAlignment="Center" Margin="0,61,0,0" VerticalAlignment="Top" Height="28" Width="780" Click="AllButtonsClicked"/>
        <Button x:Name="button2" Content="Say &quot;World&quot;" HorizontalAlignment="Center" Margin="0,114,0,0" VerticalAlignment="Top" Height="27" Width="780" Click="AllButtonsClicked"/>
        <Button x:Name="button3" Content="Say &quot;WPF!&quot;" HorizontalAlignment="Center" Margin="0,171,0,0" VerticalAlignment="Top" Height="31" Width="780" Click="AllButtonsClicked"/>

    </Grid>
</Window>
